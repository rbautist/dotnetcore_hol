@page "{id?}"
@model AutoLot.Web.Pages.Cars.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Car.PetName</h1>

<h3>Are you sure you want to delete this car?</h3>
<div>
    @Html.DisplayForModel()
    <form asp-page="Delete" asp-route-id="@Model.Car.Id">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Car.Id" />
        <input type="hidden" asp-for="Car.TimeStamp" />
        <button type="submit" class="btn btn-danger">Delete <i class="fas fa-trash"></i></button>&nbsp;&nbsp;|&nbsp;&nbsp;
        <item-list></item-list>
    </form>
</div>
